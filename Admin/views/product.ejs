
<%- include("layouts/header.ejs")%>
<%- include('layouts/menu.ejs')%>
<%- include('layouts/sidebar.ejs')%>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Product</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Product</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
          <!-- Left col -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Add Product</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form method="post" name="frm" enctype="multipart/form-data" action=<%= (editpr)?"/pr/update/"+editpr.id:"/pr/save" %> >
                <div class="card-body">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Category</label>
                    <select name="category" class="form-control">
                      <option value="">--Select Category--</option>
                      <% if(catdata!== ''){ 
                        catdata.map((i)=>{ %>
                          <option value=<%= i.id%>><%= i.name%></option>
                      <%   })  } %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Product</label>
                    <input type="text" name="prname" class="form-control" 
                    value="<%= editpr ? editpr.name : '' %>"
                    id="exampleInputEmail1" placeholder="Enter Product" >
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Product Image</label>
                    <input type="file" name="image" class="form-control" 
                    value="<%= editpr ? editpr.image : '' %>"
                    id="exampleInputEmail1">
                  </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary"><%= (editpr)?"Update":'Save'%></button>
                </div>
              </form>
            </div>
           
          </div>
          <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                  <h3 class="card-title">Product List</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                  <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Product</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                      <% prdata.map((i)=>{ %>
                        <tr>
                            <td><%= i.id %></td>
                            <td><%= i.name %></td>
                            <td>
                                <a href="/pr/edit/<%= i.id %>">Edit</a>
                                <a href="/pr/delete/<%= i.id %>"><i class="fa fa-trash" style="color:red"></i></a>
                            </td>
                        </tr>
                      <% })  %>
                    </tbody>
                  </table>
                </div>
                
              </div>
          </div>
        </div>
        <!-- /.row (main row) -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
<%- include('layouts/footer.ejs')%>

